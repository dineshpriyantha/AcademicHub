            <div class="accordion accordion-flush" id="accordionFlushExample">
                @if(Model.Category != null)
                {
                    @foreach (var category in Model.Category)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#category-@category.CId" aria-expanded="false" aria-controls="category-@category.CId">
                                    @category.Name
                                </button>
                            </h2>
                            <div id="category-@category.CId" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                <table class="table">
                                    @if(Model.Subcategory != null)
                                    {
                                        @foreach (var subCategory in Model.Subcategory.Where(x => x.CategoryId == category.CId))
                                        {
                                            <tr>
                                                <td>
                                                    <a href="http://www.jquery2dotnet.com">@subCategory.Name</a>
                                                </td>
                                            </tr>
                                        }
                                    }                                   
                                    
                                </table>
                            </div>
                        </div>
                    }
                }                
            </div>
