@using DataAccessLayer.Model

@model Subcategory
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Update SubCategory";
}

<h2>Update Category</h2>
@if (!string.IsNullOrEmpty(@ViewBag.message))
{
        <div class="alert @(ViewBag.success ? "alert-success" : "alert-danger")" role="alert">
        @ViewBag.message
        </div>
}

@using (Html.BeginForm("UpdateSubCategory", "Admin", FormMethod.Post))
{
        @Html.HiddenFor(model => model.SId)

        <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.CategoryId)
        @Html.DropDownListFor(model => model.CategoryId, ViewBag.Category as SelectList, "-- Select Display Area --", new { @class = "form-control" })
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.SRank)
        @Html.TextBoxFor(model => model.SRank, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="SubcategoryIndex" class="btn btn-dark">Back to List</a>
        </div>
}
