@using DataAccessLayer.Model;
@model List<Category>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <a asp-action="Category" class="btn btn-success"> Create New</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @ViewBag.Category
        @if (Model != null && Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Display Area</th>
                        <th>CRank</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>@category.Date</td>
                            <td>@category.DisplayArea</td>
                            <td>@category.CRank</td>
                            <td>
                                <a href="@Url.Action("Update", "Admin", new { id = category.CId })" class="btn btn-primary">Edit</a> |
                                <a href="@Url.Action("Delete", "Admin", new { id = category.CId })" class="btn btn-danger" onclick="return confirmDelete()">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No categories found.</p>
        }
    </div>
</div>

<script type="text/javascript">
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this item?")) {
            return true;
        } else {
            return false;
        }
    }
</script>
